{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2017", "DOM"]
  }
}
