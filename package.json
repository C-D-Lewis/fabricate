{
  "name": "fabricate.js",
  "version": "1.8.1",
  "description": "Tiny vanilla JS webapp framework with a fluent API and zero dependencies.",
  "main": "fabricate.js",
  "directories": {
    "examples": "examples",
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-d-lewis/fabricate.git"
  },
  "keywords": [],
  "author": "C-D-Lewis",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/c-d-lewis/fabricate/issues"
  },
  "homepage": "https://github.com/c-d-lewis/fabricate#readme",
  "devDependencies": {
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-airbnb-base",
    "env": {
      "browser": true
    },
    "rules": {
      "no-multi-spaces": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "no-await-in-loop": 0,
      "no-console": 0,
      "no-alert": 0,
      "no-param-reassign": [
        "error",
        { "props": false }
      ]
    },
    "globals": {
      "fabricate": "readonly",
      "fab": "readonly",
      "Theme": "readonly",
      "Colors": "readonly"
    }
  }
}
